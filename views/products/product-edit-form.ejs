<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %> 
    <link rel="stylesheet" href="/css/create.css">
</head>
<body>
    <div class="contenedor-general">
        <header>                
            <div class="nav-bar">            
            <a href="/"><img id="logo" src="/images/logoGameUp.png"/></a>
            </div>                                
        </header>
        <div class="contenedor margen-login-register">
            <div class="tab-items">
                <div class="marco">
                    <p>Editar producto</p>
                </div>
            </div>
            <form action="/products/<%= productToEdit.id %>?_method=PUT" method="POST">
                <div class="invoiceBox">
                    <label for="">Imagen del producto</label>
                    <div class="imagen">
                        <figure><img  src="<%=productToEdit.image%>" alt="imagen de producto"></figure>
                    </div>
                  </div>
                  <label for="image">Cambiar imagen del producto</label>
                  <input  type="text" 
                      id="image" 
                      name="image" 
                      placeholder="Ejemplo: escribe una URL" 
                      class="form-input"
                      value="<%= productToEdit.image%>">
                <label for="name">Nombre del producto:</label>
			    <input type="text" id="name" name="name" placeholder="Ej: Resident Evil" class="form-input" value="<%= productToEdit.name %>">
                <label for="price" class="form-label">Precio del producto:</label>
				<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input" value="<%= productToEdit.price %>">
                <label for="discount" class="form-label">Descuento:</label>
                <select name="discount" id="discount" class="form-input">
					<option value="">Elegir opción</option>
                    <option value="5" selected="<%= productToEdit.category ===  '5' ? 'selected' : '' %>">5</option>
                    <option value="10" selected="<%= productToEdit.category === '10' ? 'selected' : '' %>">10</option>
                    <option value="15" selected="<%= productToEdit.category === '15' ? 'selected' : '' %>">15</option>
                    <option value="20" selected="<%= productToEdit.category === '20' ? 'selected' : '' %>">20</option>
                    <option value="25" selected="<%= productToEdit.category === '25' ? 'selected' : '' %>">25</option>
				</select>
                <label for="category" class="form-label">Categoría:</label>
				<select name="category" id="category" class="form-input">
					<option value="">Elegir opción</option>
                    <option value="Videojuego" selected="<%= productToEdit.category === 'Videojuego' ? 'selected' : '' %>">Videojuego</option>
                    <option value="Consola" selected="<%= productToEdit.category === 'Consola' ? 'selected' : '' %>">Consola</option>
                    <option value="Laptop" selected="<%= productToEdit.category === 'Laptop' ? 'selected' : '' %>">Laptop</option>
                    <option value="Accesorios" selected="<%= productToEdit.category === 'Accesorios' ? 'selected' : '' %>">Accesorios</option>
				</select>
                <select name="brand" id="brand" class="form-input">
					<option value="">Elegir opción</option>
                    <option value="PlayStation" selected="<%= productToEdit.category === 'PlayStation' ? 'selected' : '' %>">Play Station</option>
                    <option value="Switch" selected="<%= productToEdit.category === 'Switch' ? 'selected' : '' %>">Nintendo Switch</option>
                    <option value="Xbox" selected="<%= productToEdit.category === 'Xbox' ? 'selected' : '' %>">Xbox</option>
                    <option value="DELL" selected="<%= productToEdit.category === 'DELL' ? 'selected' : '' %>">DELL</option>
				</select>
                <select name="genre" id="genre" class="form-input">
					<option value="">Elegir opción</option>
                    <option value="Accion" selected="<%= productToEdit.category === 'Accion' ? 'selected' : '' %>">Acción</option>
                    <option value="Arcade" selected="<%= productToEdit.category === 'Arcade' ? 'selected' : '' %>">Arcade</option>
                    <option value="Aventura" selected="<%= productToEdit.category === 'Aventura' ? 'selected' : '' %>">Aventura</option>
                    <option value="Deportes" selected="<%= productToEdit.category === 'Deportes' ? 'selected' : '' %>">Deportes</option>
                    <option value="Estrategia" selected="<%= productToEdit.category === 'Estrategia' ? 'selected' : '' %>">Estrategia</option>
                    <option value="Peleas" selected="<%= productToEdit.category === 'Peleas' ? 'selected' : '' %>">Peleas</option>
                    <option value="Puzzle" selected="<%= productToEdit.category === 'Puzzle' ? 'selected' : '' %>">Puzzle</option>
                    <option value="Terror" selected="<%= productToEdit.category === 'Terror' ? 'selected' : '' %>">Terror</option>
                    <option value="Shooter" selected="<%= productToEdit.category === 'Shooter' ? 'selected' : '' %>">Shooter</option>
				</select>

                <div >
                    <label for="description" class="form-label">Descipción:</label>
                    <textarea name="description" id="description" class="form-input"><%= productToEdit.description %></textarea>
                </div>
                <div class="btn-container">
                    <button class="btn-login" type="submit">Guardar producto</button>
                </div>
            </form>
        </div>
    </div>
    <footer >
       <%- include('../partials/footer') %>         
    </footer>
</body>
</html>