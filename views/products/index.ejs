<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    
    <header>
        <%- include('../partials/header');%>
    </header>
    <div id="content-navbar-desk">
        <ul id="navbar-desk">
            <li><a href="#playstation">PlayStation</a></li>
            <li><a href="#nintendo">Nintendo Switch</a></li>
        </ul>
    </div>
    
    <div class="banner-container">
        <!--<i class="fas fa-chevron-left flechas"></i>-->
        <img id="banner" src="/images/index/img-home-banner.jpg"/>
        <!--<i class="fas fa-chevron-right flechas"></i>-->
    </div>
    <!--Nuevo contenido main imagenes-->
    <main>
        <div>
        <div class="contendor-main">
            <section >
                <h1 id="playstation"  class="titulares">Populares Playstation</h1>
                <div class="caja-wrap">
                    <% for(let i = 0; i < playstation.length; i ++) { %>
                        <article class="caja-box-shadow">
                            <a href="/products/<%=playstation[i].id%>">
                                <img  src="/images/index/<%=playstation[i].image%>" alt="imagen de producto">
                                <div class="caja">
                                    <p><i class="fas fa-shipping-fast"></i></p>                           
                                    <p class="precios"><%=playstation[i].price%></p>
                                    <p class="descuentos"><%=playstation[i].discount%>% OFF</p>
                                </div>
                                <p class="descripciones"><%=playstation[i].name%></p>
                            </a>
                        </article>
                    <% } %>
                </div>
            </section>
            <section >
                <h1 id="nintendo" class="titulares">Populares Nintendo</h1>
                <div class="caja-wrap">
                    <% for(let i = 0; i < nintendoswitch.length; i ++) { %>
                        <article class="caja-box-shadow">
                            <a href="/products/<%=nintendoswitch[i].id%>">
                                <img  src="/images/index/<%=nintendoswitch[i].image%>" alt="imagen de producto">
                                <div class="caja">
                                    <p><i class="fas fa-shipping-fast"></i></p>                           
                                    <p class="precios"><%=nintendoswitch[i].price%></p>
                                    <p class="descuentos"><%=nintendoswitch[i].discount%>% OFF</p>
                                </div>
                                <p class="descripciones"><%=nintendoswitch[i].name%></p>
                            </a>
                        </article>
                    <% } %>                    
                </div>         
            </section>
           
        </div>
        </div>
    </main>
    <!-- Fin Nuevo contenido main imagenes-->
    <footer >
        <%- include('../partials/footer') %> 
    </footer>
</body>
</html>