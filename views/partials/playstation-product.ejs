<section >
    <h1 id="playstation"  class="titulares">Populares Playstation</h1>
    <div class="caja-wrap">
        <% for(let i = 0; i < playstation.length; i ++) { %>
            <article class="caja-box-shadow">
                <a href="/products/<%=playstation[i].id%>">
                    <img  src="/images/index/<%=playstation[i].image%>" alt="imagen de producto">
                    <div class="caja">
                        <p><i class="fas fa-shipping-fast"></i></p>                           
                        <p class="precios"><%=playstation[i].price%></p>
                        <p class="descuentos"><%=playstation[i].discount%>% OFF</p>
                    </div>
                    <p class="descripciones"><%=playstation[i].name%></p>
                </a>
            </article>
        <% } %>
    </div>
</section>