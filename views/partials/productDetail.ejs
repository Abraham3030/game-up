<div class="contendor-main">
    <section >
        <h1 id="playstation"  class="titulares">Todos los Productos</h1>
        <div class="caja-wrap">
            <% for(let i = 0; i < products.length; i ++) { %>
                <article class="caja-box-shadow">
                    <a href="/products/<%=products[i].id%>">
                        <img  src="<%=products[i].image%>" alt="imagen de producto">
                        <div class="caja">
                            <p><i class="fas fa-shipping-fast"></i></p>                           
                            <p class="precios"><%=products[i].price%></p>
                            <p class="descuentos"><%=products[i].discount%>% OFF</p>
                        </div>
                        <p class="descripciones"><%=products[i].name%></p>
                    </a>
                </article>
                <% } %>
        </div>
    </section>
</div>