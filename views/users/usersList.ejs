<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %> 
    <link rel="stylesheet" href="/css/usersList.css">
</head>
<body>    
    <%- include('../partials/headerUser.ejs') %>
    <main>
        <div class="container">
            <% for(let i = 0; i < users.length; i ++) { %>
                <article class="card">
                        <div class="card-left">
                            <figure><img  src="/images/users/<%=users[i].avatar%>" alt="imagen de usuario"></figure>
                            <h3>#<%=users[i].id%></h3>
                        </div>
                        <div class="card-content">                           
                            <h2><%=users[i].first_name%> <%=users[i].last_name%></h2>
                            <h2><%=users[i].email%></h2>
                            <form class="btn-size" action="/users/<%=users[i].id%>">
                                <button class="btn-productCart">Ver detalle</button>
                            </form>
                        </div>
                </article>
            <% } %>
        </div>
    </main>    
</body>
</html>